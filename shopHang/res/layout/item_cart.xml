<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/cart_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:checked="true" />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:layout_toEndOf="@id/cbSelect"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/product_image" />

        <!-- Remove Button (Top Right) -->
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/cart_text_secondary"
            android:contentDescription="Xóa" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivProductImage"
            android:layout_toStartOf="@id/btnRemove"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cart_text_primary"
                android:layout_marginBottom="6dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Color and Size -->
            <TextView
                android:id="@+id/tvColorSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/cart_text_secondary"
                android:layout_marginBottom="8dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cart_primary"
                android:layout_marginBottom="12dp" />

            <!-- Quantity Selector - Improved Design -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/quantity_selector_background"
                android:padding="4dp"
                android:layout_alignParentEnd="true">

                <!-- Decrease Button -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnDecrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:background="@drawable/quantity_button_background"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Giảm"
                    android:stateListAnimator="@null" />

                <!-- Quantity Display -->
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/cart_text_primary"
                    android:background="@drawable/quantity_number_background"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

                <!-- Increase Button -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnIncrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_input_add"
                    android:background="@drawable/quantity_button_background"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Tăng"
                    android:stateListAnimator="@null" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>