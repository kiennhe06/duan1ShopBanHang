<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ShopHang" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Full screen theme for viewing profile image -->
    <style name="Theme.ShopHang.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>

